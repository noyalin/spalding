<?xml version="1.0"?>
<config>
    <modules>
        <Devicom_Inventory>
            <version>0.1.0</version>
        </Devicom_Inventory>
    </modules>
    <frontend>
        <routers>
            <inventory>
                <use>standard</use>
                <args>
                    <module>Devicom_Inventory</module>
                    <frontName>inventory</frontName>
                </args>
            </inventory>
        </routers>
    </frontend>
    <global>
        <models>
            <inventory>
                <class>Devicom_Inventory_Model</class>
                <resourceModel>inventory_mysql4</resourceModel>
            </inventory>
            <inventory_mysql4>
                <class>Devicom_Inventory_Model_Mysql4</class>
                <entities>
                    <physical>
                        <table>devicom_physical_inventory</table>
                    </physical>
                </entities>
            </inventory_mysql4>
        </models>
        <blocks>
            <inventory>
                <class>Devicom_Inventory_Block</class>
            </inventory>
        </blocks>
        <helpers>
            <inventory>
                <class>Devicom_Inventory_Helper</class>
            </inventory>
        </helpers>
        <resources>
            <inventory_setup>
                <setup>
                    <module>Devicom_Inventory</module>
                    <class>Devicom_Inventory_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </inventory_setup>
            <inventory_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </inventory_write>
            <inventory_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </inventory_read>
        </resources>
    </global>
</config>