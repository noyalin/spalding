<config>
    <modules>
        <CosmoCommerce_Weixinpay>
            <version>2.0.3</version>
        </CosmoCommerce_Weixinpay>
    </modules>
    <global>
        <models>
            <weixinpay>
                <class>CosmoCommerce_Weixinpay_Model</class>
                <resourceModel>weixinpay_mysql4</resourceModel>
            </weixinpay>
            <weixinpay_mysql4>
                <class>CosmoCommerce_Weixinpay_Model_Mysql4</class>
                <entities>
                    <log><table>weixinpay_log</table></log>
                    <api_debug><table>weixinpay_api_debug</table></api_debug>
                </entities>
            </weixinpay_mysql4>
        </models>
        <resources>
            <weixinpay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </weixinpay_write>
            <weixinpay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </weixinpay_read>
        </resources>
        <blocks>
            <weixinpay><class>CosmoCommerce_Weixinpay_Block</class></weixinpay>
    	</blocks>
        <sales>
            <!-- /**
                  * @depraceted after 1.4.2, statuses are saved into sales_order_status table
                  */
            -->
            <order>
                <statuses>
                    <weixinpay_wait_buyer_pay translate="label">
                        <label>WAIT BUYER PAY</label>
                    </weixinpay_wait_buyer_pay>
                    <weixinpay_wait_seller_send_goods translate="label">
                        <label>WAIT SELLER SEND GOODS</label>
                    </weixinpay_wait_seller_send_goods>
                    <weixinpay_wait_buyer_confirm_goods translate="label">
                        <label>WAIT BUYER CONFIRM GOODS</label>
                    </weixinpay_wait_buyer_confirm_goods>
                    <weixinpay_trade_closed translate="label">
                        <label>TRADE CLOSED</label>
                    </weixinpay_trade_closed>
                    <weixinpay_wait_seller_agree translate="label">
                        <label>WAIT SELLER AGREE</label>
                    </weixinpay_wait_seller_agree>
                    <weixinpay_seller_refuse_buyer translate="label">
                        <label>SELLER REFUSE BUYER</label>
                    </weixinpay_seller_refuse_buyer>
                    <weixinpay_wait_buyer_return_goods translate="label">
                        <label>WAIT BUYER RETURN GOODS</label>
                    </weixinpay_wait_buyer_return_goods>
                    <weixinpay_wait_seller_confirm_goods translate="label">
                        <label>WAIT SELLER CONFIRM GOODS</label>
                    </weixinpay_wait_seller_confirm_goods>
                    <weixinpay_refund_success translate="label">
                        <label>REFUND SUCCESS</label>
                    </weixinpay_refund_success>
                    <weixinpay_refund_closed translate="label">
                        <label>REFUND CLOSED</label>
                    </weixinpay_refund_closed>
                    <weixinpay_trade_success translate="label">
                        <label>TRADE SUCCESS</label>
                    </weixinpay_trade_success>
                    <weixinpay_trade_finished translate="label">
                        <label>TRADE FINISHED</label>
                    </weixinpay_trade_finished>
                </statuses>
            </order>
        </sales>
        <payment>
            <weixinpay_payment>
                <languages>
                    <FR>
                        <code>FR</code>
                        <name>Français</name>
                    </FR>
                    <EN>
                        <code>EN</code>
                        <name>Anglais</name>
                    </EN>
                    <ES>
                        <code>ES</code>
                        <name>Espagnol</name>
                    </ES>
                    <DE>
                        <code>DE</code>
                        <name>Allemand</name>
                    </DE>
                    <IT>
                        <code>IT</code>
                        <name>Italien</name>
                    </IT>
                    <NL>
                        <code>NL</code>
                        <name>Néerlandais</name>
                    </NL>
                </languages>
            </weixinpay_payment>
        </payment>
		  <helpers>
		  	   <weixinpay>
		  	   	   <class>CosmoCommerce_Weixinpay_Helper</class>
		  	   </weixinpay>
		  </helpers>
    </global>
    <frontend>
        <secure_url>
            <weixinpay_payment>/weixinpay/payment</weixinpay_payment>
        </secure_url>
        <routers>
            <weixinpay>
                <use>standard</use>
                <args>
                    <module>CosmoCommerce_Weixinpay</module>
                    <frontName>weixinpay</frontName>
                </args>
            </weixinpay>
        </routers>
        <translate>
            <modules>
                <CosmoCommerce_Weixinpay>
                    <files>
                        <default>CosmoCommerce_weixinpay.csv</default>
                    </files>
                </CosmoCommerce_Weixinpay>
            </modules>
        </translate>
        <layout>
            <updates>
                <weixinpay>
                    <file>weixinpay.xml</file>
                </weixinpay>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <CosmoCommerce_Weixinpay>
                    <files>
                        <default>CosmoCommerce_Weixinpay.csv</default>
                    </files>
                </CosmoCommerce_Weixinpay>
            </modules>
        </translate>
    </adminhtml>
</config>
