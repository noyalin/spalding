<script type="text/javascript">

    jQuery(document).ready(
        //滑动整屏滚动
        function() {
            var nowpage = 0;
            //给最大的盒子增加事件监听
            jQuery(".container").swipe(
                {
                    swipe:function(event, direction, distance, duration, fingerCount) {
                         if(direction == "up"){
                            nowpage = nowpage + 1;
                         }else if(direction == "down"){
                            nowpage = nowpage - 1;
                         }

                         if(nowpage > 1){
                            nowpage = 1;
                         }

                         if(nowpage < 0){
                            nowpage = 0;
                         }

                        jQuery(".container").animate({"top":nowpage * -100 + "%"},400);

                        jQuery(".page").eq(nowpage).addClass("cur").siblings().removeClass("cur");
                    }
                });
        }


    );

    jQuery(function(){
        var InterValObj; //timer变量，控制时间
        var count = 120; //间隔函数，1秒执行
        var curCount;//当前剩余秒数

        var _lightedCnt = <?php echo $this->getPromotionCount() ?>;
        var _isPromotioned = <?php echo $this->isPromotioned() ?>;

        loadLight(_lightedCnt, _isPromotioned);

        function ajaxEvalJson(data)
        {
            var dataObj = eval("("+jQuery.trim(data)+")");
            if (dataObj.status != "Success") {
                loadLight(dataObj.lightedCnt, 1);
                alert(dataObj.message);
            }
            return dataObj;
        }

        //点亮球
        jQuery(".please").on("click",function(){
            var _wxBallGy = jQuery(".wxBallGys");
            var _wxBallGyLen = _wxBallGy.length;
            if(_wxBallGyLen>0){
//                jQuery(this).children(".wxBallGys").remove();
                jQuery(this).parents().find(".popPhone").show();
            }else{
                jQuery(this).off("click");
            }

        });

        //关闭手机验证
        jQuery(".popPhoneClose").on("click",function(){
            jQuery(this).parents(".popPhone").hide();
        });

        //清除手机号码
        jQuery(".clearTel").on("click",function(){
            jQuery(this).siblings(".telNum").find(":text").val("").focus();
        });

        //发送验证码
        jQuery(".sendCd").on("click", function () {
            var telephone = jQuery(".telNum").find("input").val();
            if (!checkTelNo(telephone)) {
                return;
            }
            sendMessage();
            jQuery.ajax({
                type: 'POST',
                url: '<?php echo $this->getUrl('weixinevent/index/sendCaptcha') ?>',
                data: {telephone: telephone},
                success: function (data) {
                    var dataObj = ajaxEvalJson(data);
                    if (dataObj.status == "Success") {
                        alert(dataObj.data);
                    }
                },
                error: function(XMLHttpRequest, textStatus, errorThrown){
                    alert(XMLHttpRequest.status + '\n' + XMLHttpRequest.readyState + '\n' + textStatus);
                },
                complete:function(){
                    //document.getElementById("btnSendCode").disabled = true;
                }
            });

        });


        //验证验证码
        jQuery(".popPhoneBtn").on("click", function () {
            var telephone = jQuery(".telNum").find("input").val();
            var inputCaptcha = jQuery(".phoneInpCd").find("input").val();

            if (!checkTelNo(telephone) || !checkCaptcha(inputCaptcha)) {
                return;
            }

            jQuery(".popPhoneBtn").attr("disabled", "true");

            jQuery.ajax({
                type: 'POST',
                url: '<?php echo $this->getUrl('weixinevent/index/checkCaptcha') ?>',
                data: {inputCaptcha: inputCaptcha, telephone: telephone, clickOrder: 0},
                success: function (data) {
                    var dataObj = ajaxEvalJson(data);
                    if (dataObj.status == "Success") {
                        loadLight(dataObj.data, 1);
                        jQuery(".popPhone").hide();
                        alert("验证成功");
                        //分享提示层
                        var sponsor_flag = <?php echo $this->isSponsor() ?>;
                        if (sponsor_flag == 1 && dataObj.data < 5) {
                            var _shareWx = jQuery(".shareWx");
                            _shareWx.show();
                            _shareWx.on("click", function () {
                                jQuery(this).hide();

                            });
                        }
                    } else if (dataObj.status == "Joined") {
                        jQuery(".popPhone").hide();
                    }
                    jQuery(".popPhoneBtn").attr("disabled", "false");
                },
                error: function(XMLHttpRequest, textStatus, errorThrown){
                    alert(XMLHttpRequest.status + '\n' + XMLHttpRequest.readyState + '\n' + textStatus);
                    jQuery(".popPhoneBtn").attr("disabled", "false");
                }
            });
        });

        // 关闭分享后
        jQuery(".shareAfWrap").on("click",function(){
            jQuery(this).parents(".shareAf").hide();
        });

        // 关闭操作提示
        jQuery(".closeAlert").on("click",function(){
            jQuery(this).parents(".wxAlert").hide();
        });

        //timer处理函数
        function loadLight(lightedCnt, flag) {
            var i;
            for (i = 0; i < lightedCnt; i++) {
                var str = ".wxBall_" + (i + 1);
                jQuery(str).children(".wxBallGys").remove();
                jQuery(str).children(".please").remove();
            }
            for (; i < 5; i++) {
                var str = ".wxBall_" + (i + 1);
                if (i != lightedCnt || flag == 1) {
                    jQuery(str).children(".please").remove();
                }
            }
        }

        function checkTelNo(telno) {
            var reg = /^0?1[3|4|5|8][0-9]\d{8}$/;
            if(!reg.test(telno))
            {
                alert('请输入有效的手机号码！');
                return false;
            }
            return true;
        }

        function checkCaptcha(code) {
            var reg = /^\d{4}$/;
            if(!reg.test(code))
            {
                alert('请输入4位验证码！');
                return false;
            }
            return true;
        }

        function sendMessage() {
            curCount = count;
            //设置button效果，开始计时
            jQuery(".sendCd").attr("disabled", "true");
            jQuery(".sendCd").val("( " + curCount + " ) 秒");
            InterValObj = window.setInterval(SetRemainTime, 1000); //启动计时器，1秒执行一次
        }

        //timer处理函数
        function SetRemainTime() {
            if (curCount == 0) {
                window.clearInterval(InterValObj);//停止计时器
                jQuery(".sendCd").removeAttr("disabled");//启用按钮
                jQuery(".sendCd").val("重新发送");
                code = ""; //清除验证码。如果不清除，过时间后，输入收到的验证码依然有效
            }
            else {
                curCount--;
                jQuery(".sendCd").val("( " + curCount + " ) 秒");
            }
        }

    });

</script>

