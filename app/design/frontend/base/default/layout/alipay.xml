<?xml version="1.0"?>
<layout version="0.1.0">
    
    <alipay_payment_pay>
        <reference name="root">
            <action method="setTemplate"><template>page/1column-Payment.phtml</template></action>
        </reference>
        <reference name="head">
            <action method="setTitle"><title>订单支付</title></action>
            <action method="addCss"><stylesheet>css/alipay.css</stylesheet></action>
            <action method="addCss"><stylesheet>opcheckout/css/jquery-ui.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><script>js/alipay.js</script></action>
        </reference>
        <reference name="content">  
            <block type="core/template" name="payment" as="payment"  before="*" template="alipay/payment.phtml" >
                <block type="alipay/redirect" name="redirect" as="redirect"  before="*"  />
            </block>
        </reference>
    </alipay_payment_pay>
    
</layout> 