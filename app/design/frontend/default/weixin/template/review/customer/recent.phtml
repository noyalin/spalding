<?php if( $this->getCollection() && $this->count()): ?>
<div class="myAccountBox">
    <h2>My Recent Reviews</h2>
    <table>
	<thead>
	    <tr>
		    <td>Submitted</td>
		    <td>Product</td>
		    <td>&nbsp;</td>
	    </tr>
	</thead>
	<tbody>
	    <?php $i = 1; foreach ($this->getCollection() as $_review): ?>
		<tr class="<?php if(++$i % 2 == 0) : ?>tableBgEven<?php else:?>tableBgOdd<?php endif;?>">
		    <td><?php echo $this->dateFormat($_review->getReviewCreatedAt()); ?></td>
		    <td><a href="<?php echo $this->getReviewUrl($_review->getReviewId()) ?>"><?php echo $this->htmlEscape($_review->getName()) ?></a></td>
		    <td><a href="<?php echo $this->getReviewLink() ?>id/<?php echo $_review->getReviewId() ?>"><?php echo $this->__('View Details') ?></a></td>
		</tr>
	    <?php endforeach; ?>
	</tbody>
	<tfoot>
	    <tr>
		<td colspan="3">
		    <a href="<?php echo $this->getAllReviewsUrl() ?>">View All Reviews</a>
		</td>
	    </tr>
	</tfoot>
    </table>
</div>
<?php endif; ?>