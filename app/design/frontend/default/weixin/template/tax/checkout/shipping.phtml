?>
<?php if ($this->displayBoth()):?>
<tr>
    <td class="align-right" colspan="3">
        <span class="subTotal"><?php echo $this->getExcludeTaxLabel() ?></span>
    </td>
    <td class="align-right">
        <span class="price"><?php echo $this->helper('checkout')->formatPrice($this->getShippingExcludeTax()) ?></span>
    </td>
</tr>
<tr>
    <td class="align-right" colspan="3">
        <span class="subTotal"><?php echo $this->getIncludeTaxLabel() ?></span>
    </td>
    <td class="align-right">
        <span class="price"><?php echo $this->helper('checkout')->formatPrice($this->getShippingIncludeTax()) ?></span>
    </td>
</tr>
<?php elseif($this->displayIncludeTax()) : ?>
<tr>
    <td class="align-right" colspan="3">
        <span class="subTotal"><?php echo $this->getTotal()->getTitle() ?></span>
    </td>
    <td class="align-right">
        <span class="price"><?php echo $this->helper('checkout')->formatPrice($this->getShippingIncludeTax()) ?></span>
    </td>
</tr>
<?php else:?>
<tr>
    <td class="align-right" colspan="3">
        <span class="subTotal">
	    <?php
		$shippingMethod = NULL;
		$estimatedDelivery = NULL;
		switch ($this->escapeHtml($this->getTotal()->getTitle())) {
		    case 'Shipping (Priority Mail 1-Day)':
			$shippingMethod = 'Shipping (USPS Priority Mail)';
			break;
		    case 'Shipping (Priority Mail 2-Day)':
			$shippingMethod = 'Shipping (USPS Priority Mail)';
			break;
		    case 'Shipping (Priority Mail 3-Day)':
			$shippingMethod = 'Shipping (USPS Priority Mail)';
			break;
		    case 'Shipping (Priority Mail DPO)':
			$shippingMethod = 'Shipping (USPS Priority Mail)';
			break;
		    case 'Shipping (Priority Mail Military)':
			$shippingMethod = 'Shipping (USPS Priority Mail)';
			break;
		    case 'Shipping (UPS Worldwide Expedited)':
			$shippingMethod = 'Shipping (International Express)';
			break;
		    default:
			$shippingMethod = $this->escapeHtml($this->getTotal()->getTitle());
		}
	    ?>
	    <?php echo $shippingMethod ?>
	</span>
    </td>
    <td class="align-right">
        <span class="price"><?php echo $this->helper('checkout')->formatPrice($this->getShippingExcludeTax()) ?></span>
    </td>
</tr>
<?php endif;?>
