<?php
/**
 * Category view template
 *
 * @see Mage_Catalog_Block_Category_View
 */
?>

<?php
    $_helper    = $this->helper('catalog/output');
    $_category  = $this->getCurrentCategory();
    $_imgHtml   = '';
$_imgUrl = null;
?>
<div class="block">
    <?php
    if(isset($_GET['attribute_set_name']) && $_GET['attribute_set_name'] == 70){
        echo $this->getLayout()->createBlock('cms/block')->setBlockId('detail_page_banner_furniture')->toHtml();
    }else if(isset($_GET['attribute_set_name']) && $_GET['attribute_set_name'] == 71){
        echo $this->getLayout()->createBlock('cms/block')->setBlockId('detail_page_banner_bag')->toHtml();
    }else if(isset($_GET['attribute_set_name']) && ($_GET['attribute_set_name'] == 69 || $_GET['attribute_set_name'] == 76) ){
        echo $this->getLayout()->createBlock('cms/block')->setBlockId('detail_page_banner_stands')->toHtml();
    }else{
		if($_category && $_category->getUrlKey() == 'custom-made'):
			echo $this->getLayout()->createBlock('cms/block')->setBlockId('detail_page_banner_custom_made')->toHtml();
		//定制球衣确认预留
		elseif($_category && $_category->getUrlKey() == 'custom-clothes'):
			echo $this->getLayout()->createBlock('cms/block')->setBlockId('detail_page_banner_custom_clothes')->toHtml();
        elseif($_category && $_category->getUrlKey() == 'trainingseries'):
            echo $this->getLayout()->createBlock('cms/block')->setBlockId('detail_page_banner_trainingseries')->toHtml();
		else:
			echo $this->getLayout()->createBlock('cms/block')->setBlockId('detail_page_banner')->toHtml();
		endif;
       
    }
    ?>
</div>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>

<?php if($_imgUrl): ?>
    <?php echo $_imgHtml ?>
<?php endif; ?>

<?php if($_description=$this->getCurrentCategory()->getDescription()): ?>
    <div class="category-description std">
        <?php echo $_helper->categoryAttribute($_category, $_description, 'description') ?>
    </div>
    <?php endif; ?>

<?php if($this->isContentMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>

<?php elseif($this->isMixedMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>
    <?php echo $this->getProductListHtml() ?>

<?php else: ?>
    <?php echo $this->getProductListHtml() ?>
<?php endif; ?>
