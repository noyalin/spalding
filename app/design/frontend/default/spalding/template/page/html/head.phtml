<script>
    jQuery(function(){
        setTimeout(function(){
            var sliderH = jQuery('.spalding_index_slider img').height();
            //alert(sliderH);
            jQuery('#focus').css("height",sliderH);
            //jQuery('.footer').css("display","block")
        },100);

//        jQuery('.searchBtn').mouseover(function(){
//            jQuery(this).parents().find('.dropDown_search').slideDown();
//        });
        var timer = null;	//定义用于清除setTimeout的变量
        jQuery(".searchBtn").hover(function(){
            clearTimeout(timer);
            jQuery(".dropDown_search").slideDown();
        },function(){
            timer = setTimeout(function(){
                jQuery(".dropDown_search").css("display","none");
            },500)

        });
        jQuery(".dropDownWrap").hover(function(){
            clearTimeout(timer);
            jQuery(".dropDown_search").css("display","block")
        },function(){
            timer = setTimeout(function(){
                jQuery(".dropDown_search").slideUp();
            },1000)

        });

        //鼠标经过放大镜显示搜索模块 e

        jQuery('.dropDownBg').on("click",function(){
            jQuery(this).parent('.dropDown_search').slideUp();
        });
        jQuery('.dropClose').on("click",function(){
            jQuery(this).parent('.dropDown_search').slideUp();
        });



        //搜索选择下拉框
        jQuery(".search_selected").bind("click",function(){
            var selectUlSiblings = jQuery(this).parent().parent().siblings().find('ul');
            var selectUl = jQuery(this).next('ul');
            if(selectUl.is(":visible")){
                selectUl.css("display","none");
            }else{
                selectUl.css("display","block");
                selectUlSiblings.css("display","none");
            }
        });

        jQuery('.scarch_select_option>li').click(function(){
            jQuery(this).parent().siblings('.search_selected').html("<span>" + jQuery(this).html() + "</span>");
            jQuery(this).parent('ul').css("display","none");
        });

        //购物车
        jQuery("#cartHeader").bind("click",function(){
            var $topCartContent = jQuery(this).parent().next('#topCartContent');
            if($topCartContent.is(":visible")){
                $topCartContent.slideUp();
            }else{
                $topCartContent.slideDown();
                $topCartContent.mouseleave(function(){
                    setTimeout(function(){
                        $topCartContent.slideUp();
                    },1000);
                });
            }
        });

        //首页板块内容
        jQuery('.plateBox').mouseenter(function(){
            jQuery(this).children('span.plateBoxImg').css("display","none");
            jQuery(this).children('a.plateBoxImgHover').css("display","block");
        });
        jQuery('.plateBox').mouseleave(function(){
            jQuery(this).children('a.plateBoxImgHover').css("display","none");
            jQuery(this).children('span.plateBoxImg').css("display","block");
        });


        //返回顶部
        jQuery('#top').click(function(){
            jQuery('html,body').animate({scrollTop: '0px'}, 600);
            return false;
        });

    });
</script>
