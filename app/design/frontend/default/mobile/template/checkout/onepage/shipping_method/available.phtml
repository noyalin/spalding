					</td>
                   <?php else: ?>
					<td>
						<input name="shipping_method" type="radio" value="<?php echo $_rate->getCode() ?>" id="s_method_<?php echo $_rate->getCode() ?>"<?php echo $checked ?> class="radio"/>
