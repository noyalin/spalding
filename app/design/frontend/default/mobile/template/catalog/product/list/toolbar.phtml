/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
?>
<?php if($this->getCollection()->getSize()): ?>
	<?php echo $this->getPagerHtml() ?>
	<?php $framePages = $this->getFramePages(); ?>
	<?php $currentPage = 1; ?>
	<?php if (count($framePages)): ?>
		<?php foreach ($this->getFramePages() as $_page): ?>
			<?php if ($this->isPageCurrent($_page)): ?>
			<?php $currentPage = $_page; break;?>
			<?php endif; ?>
		<?php endforeach; ?>
	<?php endif; ?>

<script type="text/javascript">
	jQuery.ias({
		container : '.multi-view-wrapper',
		item: '.multi-view-box ',
		pagination: '<?php echo ($this->getLastPageNum() > 0) ? "a.pages" : "a.pager"; ?>',
		next: 'a.next',
		current: <?php echo $currentPage; ?>,
		last: <?php echo $this->getLastPageNum() ?>,
		thresholdMargin: -250,
		triggerPageThreshold: 4,
		loader: '<div class="ias_loader"><img src="<?php echo($this->getSkinUrl('images/loader.gif')); ?>" /></div>',
		trigger: '<div class="ias_trigger"><a href="#">MORE STYLES</a></div>',
	});
</script>
<?php endif ?>
